{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["hardhat"]
  },
  "include": ["./scripts", "./test", "./typechain-types"],
  "exclude": ["node_modules"]
}
