{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["hardhat", "node"] // <-- âœ… make sure "node" is included too
  },
  "include": [
    "scripts",
    "test",
    "typechain-types",
    "hardhat.config.ts"
  ],
  "exclude": ["node_modules"]
}
